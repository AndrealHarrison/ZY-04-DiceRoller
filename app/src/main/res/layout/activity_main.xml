<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/dice1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/dice_one"
        android:src="@drawable/dice_1"
        app:layout_constraintBottom_toTopOf="@+id/dice2"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/red_900" />

    <ImageView
        android:id="@+id/dice2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/dice_one"
        android:src="@drawable/dice_1"
        app:layout_constraintBottom_toTopOf="@+id/dice3"
        app:layout_constraintTop_toBottomOf="@+id/dice1"
        app:tint="@color/red_900" />

    <ImageView
        android:id="@+id/dice3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/dice_one"
        android:src="@drawable/dice_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dice2"
        app:tint="@color/red_900" />

</androidx.constraintlayout.widget.ConstraintLayout>